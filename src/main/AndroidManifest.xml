<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="parisdescartes.pjs4" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme"
        android:supportsRtl="true">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".activities.ConnectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/MyMaterialTheme.Base">
        </activity>
        <activity
            android:name=".activities.CreateGroup"
            android:theme="@style/MyMaterialTheme">
        </activity>
        <activity
            android:name=".activities.ProfileActivity" >
        </activity>
        <activity
            android:name=".activities.GroupActivity" >
        </activity>
        <activity
            android:name=".activities.NoteUsers">
        </activity>
    </application>

</manifest>
